<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:inputType="textShortMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="254dp"
        android:layout_height="376dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/yoga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEditText"
        app:srcCompat="@drawable/yoga" />

    <Button
        android:id="@+id/btnNormalSearch"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="@string/btnNormalSearch"
        app:layout_constraintBottom_toTopOf="@+id/btnSuggestSearch"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAudioSearch"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:background="@drawable/microphone"
        app:layout_constraintBottom_toTopOf="@+id/btnSuggestSearch"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSuggestSearch"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="@string/btnSuggestSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="187dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>