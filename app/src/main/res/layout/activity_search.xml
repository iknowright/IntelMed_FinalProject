<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="10dp"
        android:autofillHints=""
        android:inputType="textShortMessage"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="點擊這裡搜尋" />

    <Button
        android:id="@+id/btnNormalSearch"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="@string/btnNormalSearch"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSuggestSearch"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAudioSearch"
        android:layout_width="168dp"
        android:layout_height="77dp"
        android:background="@drawable/microphone"
        app:layout_constraintBottom_toTopOf="@+id/btnSuggestSearch"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSuggestSearch"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="50dp"
        android:text="@string/btnSuggestSearch"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="187dp"
        android:text="語音辨識結果"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>